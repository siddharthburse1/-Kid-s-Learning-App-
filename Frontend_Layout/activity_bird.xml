<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/birds_backg"
    tools:context=".Bird">

    <TextView
        android:id="@+id/txt_bird"
        android:layout_width="336dp"
        android:layout_height="84dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/goblin_one"
        android:text="Birds"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/btn_next_flower"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_farm_animal"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Birds" />

    <Button
        android:id="@+id/btn_next_bird"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="133dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:text="Next Page >>"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_flower" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="733dp"
        android:layout_height="129dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_crow"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/crow" />

        <Button
            android:id="@+id/btn_duckb"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/duck" />

        <Button
            android:id="@+id/btn_eagle"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/eagle" />

        <Button
            android:id="@+id/btn_hen"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/hen" />

        <Button
            android:id="@+id/btn_kingfisher"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/kingfisher" />

        <Button
            android:id="@+id/btn_owl"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/owl" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_bird"
        android:layout_width="341dp"
        android:layout_height="226dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437"
        app:srcCompat="@drawable/birds_card" />
</androidx.constraintlayout.widget.ConstraintLayout>