<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vegetables_backg"
    tools:context=".Vegetables">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="733dp"
        android:layout_height="130dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Next_sea_animal">

        <Button
            android:id="@+id/btn_cabbage"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="81dp"
            android:layout_height="101dp"
            android:layout_weight="1"
            android:background="@mipmap/cabbage" />

        <Button
            android:id="@+id/btn_carrot"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="83dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:background="@mipmap/carrot" />

        <Button
            android:id="@+id/btn_corn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="89dp"
            android:layout_weight="1"
            android:background="@mipmap/corn" />

        <Button
            android:id="@+id/btn_cucumber"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="85dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:background="@mipmap/cucumber" />

        <Button
            android:id="@+id/btn_onion"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/onion" />

        <Button
            android:id="@+id/btn_potato"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="100dp"
            android:layout_height="112dp"
            android:layout_weight="1"
            android:background="@mipmap/potato" />

        <Button
            android:id="@+id/btn_pumpkin"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="95dp"
            android:layout_height="116dp"
            android:layout_weight="1"
            android:background="@mipmap/pumpkin" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_vegetables"
        android:layout_width="344dp"
        android:layout_height="216dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/vegetables_card" />

    <TextView
        android:id="@+id/txt_vegetables"
        android:layout_width="351dp"
        android:layout_height="81dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/goblin_one"
        android:text="Vegetables"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/btn_Next_sea_animal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Vegetables" />
</androidx.constraintlayout.widget.ConstraintLayout>