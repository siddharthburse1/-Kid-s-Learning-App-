<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animal_backg"
    android:orientation="horizontal"
    tools:context=".Wild_animal_secondPage">

    <Button
        android:id="@+id/btn_back_wildanimal"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="2dp"
        android:text=" Back Page"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_wild_animalo"
        app:layout_constraintTop_toBottomOf="@+id/txt_wild_animalo" />

    <ImageView
        android:id="@+id/img_wild_animalo"
        android:layout_width="318dp"
        android:layout_height="244dp"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/wild_animal_card"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/txt_wild_animalo"
        style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
        android:layout_width="205dp"
        android:layout_height="115dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:fontFamily="@font/goblin_one"
        android:text="@string/wild_animal"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="731dp"
        android:layout_height="105dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_hippopotamus"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/hippopotamus"
            android:text="" />

        <Button
            android:id="@+id/btn_kangaroo"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/kangaroo" />

        <Button
            android:id="@+id/btn_leopard"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/leopard"
            android:text="" />

        <Button
            android:id="@+id/btn_lion"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/lion"
            android:text="" />

        <Button
            android:id="@+id/btn_rhinoceros"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/rhinoceros"
            android:text="" />

        <Button
            android:id="@+id/btn_tiger"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/tiger"
            android:text="" />

        <Button
            android:id="@+id/btn_zebra"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/zebra"
            android:text="" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>