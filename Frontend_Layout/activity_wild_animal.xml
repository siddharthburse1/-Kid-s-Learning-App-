<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animal_backg"
    tools:context=".Wild_animal">

    <Button
        android:id="@+id/btn_next_wildanimal"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="4dp"
        android:text="Next page >>"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_wild_animalo"
        android:layout_width="318dp"
        android:layout_height="244dp"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52"
        app:srcCompat="@drawable/wild_animal_card" />

    <TextView
        android:id="@+id/txt_wild_animalo"
        style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
        android:layout_width="217dp"
        android:layout_height="115dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/goblin_one"
        android:text="Wild Animal"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/btn_next_wildanimal"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="731dp"
        android:layout_height="105dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_bison"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/bison"
            android:text="" />

        <Button
            android:id="@+id/btn_bear"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/bear"
            android:text="" />

        <Button
            android:id="@+id/btn_cheetah"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/cheetah"
            android:text="" />

        <Button
            android:id="@+id/btn_deer"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/deer"
            android:text="" />

        <Button
            android:id="@+id/btn_elephant"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/elephant"
            android:text="" />

        <Button
            android:id="@+id/btn_fox"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/fox"
            android:text="" />

        <Button
            android:id="@+id/btn_wolf"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/wolf"
            android:text="" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>