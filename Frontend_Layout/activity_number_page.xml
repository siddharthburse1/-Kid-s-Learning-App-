<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".Number_page">

    <Button
        android:id="@+id/five"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="145dp"
        android:layout_height="41dp"
        android:layout_marginBottom="3dp"
        android:background="#9E0A1A42"
        android:text="5"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/nine"
        app:layout_constraintEnd_toStartOf="@+id/six"
        app:layout_constraintStart_toEndOf="@+id/four" />

    <Button
        android:id="@+id/ten"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginBottom="2dp"
        android:background="#9F0A1A42"
        android:text="10"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nine" />

    <Button
        android:id="@+id/three"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="145dp"
        android:layout_height="41dp"
        android:layout_marginBottom="3dp"
        android:background="#BF0A1A42"
        android:text="3"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/eight"
        app:layout_constraintEnd_toStartOf="@+id/four"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/one"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="242dp"
        android:layout_height="41dp"
        android:layout_marginBottom="3dp"
        android:background="#9E0A1A42"
        android:text="1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/five"
        app:layout_constraintEnd_toStartOf="@+id/two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/zero" />

    <Button
        android:id="@+id/four"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="145dp"
        android:layout_height="41dp"
        android:layout_marginBottom="3dp"
        android:background="#AE0A1A42"
        android:text="4"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/eight"
        app:layout_constraintEnd_toStartOf="@+id/five"
        app:layout_constraintStart_toEndOf="@+id/three" />

    <Button
        android:id="@+id/eight"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="242dp"
        android:layout_height="41dp"
        android:layout_marginBottom="2dp"
        android:background="#AD0A1A42"
        android:text="8"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nine"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/seven"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="145dp"
        android:layout_height="41dp"
        android:layout_marginBottom="3dp"
        android:background="#860A1A42"
        android:text="7"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/ten"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/six" />

    <Button
        android:id="@+id/six"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="145dp"
        android:layout_height="41dp"
        android:layout_marginBottom="3dp"
        android:background="#9F0A1A42"
        android:text="6"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/ten"
        app:layout_constraintEnd_toStartOf="@+id/seven"
        app:layout_constraintStart_toEndOf="@+id/five" />

    <Button
        android:id="@+id/two"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginBottom="3dp"
        android:background="#9F0A1A42"
        android:text="2"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/seven"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one" />

    <Button
        android:id="@+id/nine"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="242dp"
        android:layout_height="41dp"
        android:layout_marginBottom="2dp"
        android:background="#9F0A1A42"
        android:text="9"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ten"
        app:layout_constraintStart_toEndOf="@+id/eight" />

    <Button
        android:id="@+id/zero"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="242dp"
        android:layout_height="41dp"
        android:layout_marginBottom="3dp"
        android:background="#B70A1A42"
        android:text="0"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/three"
        app:layout_constraintEnd_toStartOf="@+id/one"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/Mainimg_number"
        android:layout_width="341dp"
        android:layout_height="199dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/num" />

    <TextView
        android:id="@+id/txt_number"
        android:layout_width="239dp"
        android:layout_height="47dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:background="#FFFFFF"
        android:gravity="bottom|center"
        android:text="Number"
        android:textColor="#D80D0D"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>