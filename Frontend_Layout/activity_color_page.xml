<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    tools:context=".Color_page">

    <TextView
        android:id="@+id/txt_color"
        android:layout_width="211dp"
        android:layout_height="56dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="172dp"
        android:layout_marginRight="172dp"
        android:background="#00FFFFFF"
        android:gravity="bottom|center"
        android:text="COLORS"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/purple"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"


        android:layout_marginStart="94dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="8dp"
        android:background="#6B258E"
        android:rotationX="30"
        android:text="PURPLE"
        android:textColor="#D99FF8"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/pink"
        app:layout_constraintTop_toBottomOf="@+id/green" />

    <Button
        android:id="@+id/black"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"


        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="105dp"
        android:background="#000000"
        android:rotationX="30"
        android:text="BLACK"
        android:textColor="#605B5B"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/purple"
        app:layout_constraintTop_toBottomOf="@+id/green" />

    <Button
        android:id="@+id/white"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"


        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#F4F0F0"
        android:rotationX="30"
        android:text="WHITE"
        android:textColor="#807373"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pink" />

    <Button
        android:id="@+id/blue"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"


        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="#0040FF"
        android:rotationX="30"
        android:text="BLUE"
        android:textColor="#9AB4F8"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yellow"
        app:layout_constraintTop_toBottomOf="@+id/black" />

    <Button
        android:id="@+id/green"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"


        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="78dp"
        android:background="#46AF04"
        android:rotationX="30"
        android:text="GREEN"
        android:textColor="#89FA8C"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/orange"
        app:layout_constraintTop_toBottomOf="@+id/txt_color" />

    <Button
        android:id="@+id/orange"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"


        android:layout_marginStart="58dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="33dp"
        android:background="#FF6F04"
        android:rotationX="30"
        android:text="ORANGE"
        android:textColor="#E8CBAB"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toBottomOf="@+id/mainColor_img" />

    <Button
        android:id="@+id/navyblue"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"


        android:layout_marginStart="58dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#1C0043"
        android:rotationX="30"
        android:text="NAVY BLUE"
        android:textColor="#725FAC"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/white"
        app:layout_constraintTop_toBottomOf="@+id/pink" />

    <Button
        android:id="@+id/yellow"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"


        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FFD600"
        android:rotationX="30"
        android:text="YELLOW"
        android:textColor="#FAF6B8"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navyblue"
        app:layout_constraintTop_toBottomOf="@+id/purple" />

    <Button
        android:id="@+id/brown"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"


        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="238dp"
        android:background="#592600"
        android:rotationX="30"
        android:shadowColor="#00FFCC"
        android:text="BROWN"
        android:textColor="#F49733"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/green"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pink"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"


        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="8dp"
        android:background="#F12782"
        android:rotationX="30"
        android:text="PINK"
        android:textColor="#FFA5F0"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orange" />

    <Button
        android:id="@+id/red"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"


        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="238dp"
        android:background="#D61616"
        android:rotationX="30"
        android:text="RED"
        android:textColor="#F6B1B1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainColor_img"
        android:layout_width="161dp"
        android:layout_height="161dp"
        android:layout_marginStart="172dp"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/colordash" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="395dp" />

</androidx.constraintlayout.widget.ConstraintLayout>