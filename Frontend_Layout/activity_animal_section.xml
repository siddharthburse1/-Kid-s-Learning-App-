<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animal_section_back"
    tools:context=".Animal_section">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="725dp"
        android:layout_height="191dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="110dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/Farm_Animal_Card"
            android:layout_width="2dp"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_farm_animal_card"
                android:layout_width="225dp"
                android:layout_height="145dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/farm_animal_card" />


            <TextView
                android:id="@+id/txt_Farm_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="FARM ANIMALS"
                android:textColor="#FF1744"
                android:textSize="24sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Sea_Animal_Card"
            android:layout_width="2dp"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_sea_animal_card"
                android:layout_width="225dp"
                android:layout_height="145dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/sea_animal_card" />

            <TextView
                android:id="@+id/txt_Sea_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="SEA ANIMALS"
                android:textColor="#FF1744"
                android:textSize="24sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/Wild_Animal_Card"
            android:layout_width="2dp"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_wild_animal_card"
                android:layout_width="225dp"
                android:layout_height="145dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/wild_animal_card" />

            <TextView
                android:id="@+id/txt_wildAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="WILD ANIMALS"
                android:textColor="#FF1744"
                android:textSize="24sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>