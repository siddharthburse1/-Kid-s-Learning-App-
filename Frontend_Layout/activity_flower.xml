<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flower_backg"
    tools:context=".Flower">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="733dp"
        android:layout_height="129dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_aster"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/aster" />

        <Button
            android:id="@+id/btn_frangipani"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/frangipani" />

        <Button
            android:id="@+id/btn_hibiscus"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/hibiscus" />

        <Button
            android:id="@+id/btn_jasmine"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/jasmine" />

        <Button
            android:id="@+id/btn_lavender"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/lavender" />

        <Button
            android:id="@+id/btn_lotus"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/lotus" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next_flower"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="Next page >>"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_flower" />

    <TextView
        android:id="@+id/txt_flower"
        android:layout_width="303dp"
        android:layout_height="80dp"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="316dp"
        android:layout_marginRight="316dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/goblin_one"
        android:text="Flowers"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Flowers" />

    <ImageView
        android:id="@+id/img_flower"
        android:layout_width="332dp"
        android:layout_height="204dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flower_card" />
</androidx.constraintlayout.widget.ConstraintLayout>